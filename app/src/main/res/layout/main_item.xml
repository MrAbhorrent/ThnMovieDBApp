<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        tools:text="@tools:sample/lorem"
        android:ellipsize="end"
        android:textSize="@dimen/textSizeSubHeader"
        android:layout_marginTop="@dimen/minimalPadding"
        android:padding="3dp"
        />

    <ImageView
        android:id="@+id/imgvPosterPreview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/coming_soon"/>

    <TextView
        android:id="@+id/tvMovieRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:textSize="@dimen/tvTextSizeMovieInfo"
        android:padding="@dimen/minimalPadding" />

</LinearLayout>